<div class="row">
    <div class="col-md-12">
        <h2>Departments</h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <!--Table column names-->
                        <th>Department Number</th>
                        <th>Department Name</th>
                    </tr>
                </thead>
                <tbody>     
                    <!--Go through each employee and fill in the rows-->
                    {{#each departments}}
                    <tr>
                        <td><a href="/employees?department={{departmentId}}">{{departmentId}}</a></td>
                        <td><a href="/employees?department={{departmentId}}">{{departmentName}}</a></td>
                        <td>{{hireDate}}</td>
                    </tr> 
                    {{/each}}
                    </tbody>    
            </table>
        </div> 
    </div>
</div>